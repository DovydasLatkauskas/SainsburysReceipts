{
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.3",
        "prettier": "^2.8.3",
        "prettier-plugin-organize-attributes": "^0.0.5",
        "prettier-plugin-tailwindcss": "^0.2.1"
    },
    "dependencies": {
        "tailwindcss": "^3.2.4"
    },
    "prettier": {
        "attributeGroups": [
            "^x-data",
            "^x-init",
            "^x-show",
            "^(x-bind|:)",
            "^(x-on|@)",
            "^x-text",
            "^x-html",
            "^x-model",
            "^x-modelable",
            "^x-for",
            "^x-transition$",
            "^x-transition:enter$",
            "^x-transition:enter-start$",
            "^x-transition:enter-end$",
            "^x-transition:leave$",
            "^x-transition:leave-start$",
            "^x-transition:leave-end$",
            "^x-effect",
            "^x-ignore",
            "^x-ref",
            "^x-cloak",
            "^x-teleport",
            "^x-if",
            "^x-id",
            "^class$",
            "^(id|name|src|href)$",
            "$DEFAULT",
            "^aria-"
        ],
        "attributeSort": "ASC",
        "bracketSameLine": true,
        "printWidth": 120,
        "overrides": [
            {
                "files": [
                    "*.json",
                    "*.js",
                    "*.css"
                ],
                "options": {
                    "tabWidth": 4
                }
            }
        ]
    }
}
